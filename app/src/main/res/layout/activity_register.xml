<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/natural"
        android:text="Registrate!"
        android:textColor="#749B1F"
        android:textSize="70sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="483dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress"
        android:paddingLeft="25dp" />

    <EditText
        android:id="@+id/register_user"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="203dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/user"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="273dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/contra"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="343dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/contra"
        android:ems="10"
        android:hint=" Repite la Contraseña"
        android:inputType="textPassword"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/celular"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="413dp"
        android:background="@drawable/input_design"
        android:drawableLeft="@drawable/celular"
        android:ems="10"
        android:hint="Numero de Celular"
        android:inputType="number"
        android:paddingLeft="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="41dp"
        android:text="Por favor llena todos los campos a continuación con tus datos personales"
        android:textAlignment="center" />

    <Button
        android:id="@+id/regisbtn2"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="597dp"
        android:background="@drawable/round_btn"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>


</RelativeLayout>